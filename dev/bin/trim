#!/bin/bash
###############################################################################
# Name        : trim                                                          # 
# Description :                                                               #
#                                                                             #
#                                                                             #
# Author      : Scott Walkinshaw                                              #
# Date        : 1st June 2001                                                #
#                                                                             #
###############################################################################
###############################################################################
# File Modification History                                                   #
###############################################################################
# Inits | Date      | Vers | Description                                      #
# SW    | 01 Jun 01 | 1.00 | Initial Issue                                    #
###############################################################################
[ $# -lt 1 ] && echo "usage: trim <filename>" && exit 1
TFILE="/tmp/$1.$$"
sed '1,$s/\ *$//' $1 > $TFILE
if [ $? -eq 0 ]; then
 \mv $TFILE $1
 exit 0
else
 echo "trim: problem trimming file [$1]"
 exit 1
fi
