my_cd ()
{
  \cd $1 > /dev/null || return 1
  PWD1="$(basename $PWD)"
  [ "$PWD" = "$HOME" ] && PWD1="~"
  [ "$PWD" = "/" ] && PWD1=""
  PS1="${FG_YEL}[$LOGNAME@$HOSTNAME]${FG_WHI} ${PWD1}/ $ "
}
